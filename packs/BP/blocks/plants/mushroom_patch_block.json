            "minecraft:geometry": {
                "identifier": "geometry.unusual_furniture.mushroom_patch",
                "bone_visibility": {
                    "wall1": "q.block_state('unusual_furniture:wall') == true && q.block_state('unusual_furniture:plant') == 0",
                    "wall2": "q.block_state('unusual_furniture:wall') == true && q.block_state('unusual_furniture:plant') == 1",
                    "patch": "q.block_state('unusual_furniture:wall') == false"
                }
