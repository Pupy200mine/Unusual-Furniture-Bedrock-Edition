                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:block_face') == 'east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            -90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('unusual_furniture:wall') == true",
                "components": {
                    "minecraft:selection_box": {
                        "origin": [
