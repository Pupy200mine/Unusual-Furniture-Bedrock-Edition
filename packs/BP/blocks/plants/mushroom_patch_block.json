                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            5,
                            16
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('unusual_furniture:type') == 0",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "brown_mushroom",
                            "ambient_occlusion": false
                        }
                    }
                }
            },
            {
                "condition": "q.block_state('unusual_furniture:type') == 1",
                "components": {
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "red_mushroom",
