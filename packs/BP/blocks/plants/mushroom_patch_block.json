                "unusual_furniture:mushroom_patch"
            ],
            "tag:unusual_furniture:mushroom_patch": {},
            "minecraft:loot": "loot_tables/mushroom_patch.json",
            "tag:unusual_furniture:no_particles": {},
            "minecraft:collision_box": false
        },
        "permutations": [
            {
                "condition": "q.block_state('minecraft:block_face') == 'north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('minecraft:block_face') == 'west'",
